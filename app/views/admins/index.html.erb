<h1> Users </h1>

<div style="display: grid; grid-template-columns: 1fr 1fr 1fr;">
  <% @users.each do |user| %>
    <div>

      <h2> <%= user.id %> </h2>
      <h2> <%= user.first_name %> </h2>
      <h2> <%= user.last_name %> </h2>
      <h2> <%= user.created_at %> </h2>
      <h2> <%= user.admin %> </h2>

      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <ul>
            <li><%= link_to 'Edit', edit_user_path(user) %> | </li>
            <li><%= link_to 'Delete', user_path(user), data: {method: :delete, confirm: 'Delete user?'} %> </li>
          </ul>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>